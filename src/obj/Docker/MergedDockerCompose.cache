services:
  elasticsearch:
    container_name: elasticsearch
    environment:
      ES_JAVA_OPTS: -Xms512m -Xmx512m
      discovery.type: single-node
      xpack.monitoring.enabled: "true"
      xpack.watcher.enabled: "false"
    image: docker.elastic.co/elasticsearch/elasticsearch:7.9.2
    ports:
    - published: 9200
      target: 9200
    volumes:
    - elasticsearch-data:/usr/share/elasticsearch/data:rw
  file-context-ext:
    build:
      context: D:\Workspace\dotnet-project-boilerplate-practice\src
      dockerfile: Services/ContextExtractor/Dockerfile
    depends_on:
      fileprocessordb:
        condition: service_started
      rabbitmq:
        condition: service_started
    environment:
      ASPNETCORE_ENVIRONMENT: Development
      CacheSettings:ConnectionString: fileProcessorDb:6379
      EventBusSettings:HostAddress: amqp://guest:guest@rabbitmq:15672
    expose:
    - '8005'
    image: file-context-ext
  file-processor:
    build:
      context: D:\Workspace\dotnet-project-boilerplate-practice\src
      dockerfile: Services/Basket/Basket.API/Dockerfile
    container_name: file-processor
    depends_on:
      fileprocessordb:
        condition: service_started
      rabbitmq:
        condition: service_started
    environment:
      ASPNETCORE_ENVIRONMENT: Development
      CacheSettings:ConnectionString: fileProcessorDb:6379
      EventBusSettings:HostAddress: amqp://guest:guest@rabbitmq:15672
    image: file-processor
    ports:
    - published: 8001
      target: 80
  fileprocessordb:
    container_name: fileprocessordb
    image: redis:alpine
    ports:
    - published: 6379
      target: 6379
    restart: always
  kibana:
    container_name: kibana
    depends_on:
      elasticsearch:
        condition: service_started
    environment:
      ELASTICSEARCH_URL: http://elasticsearch:9200
    image: docker.elastic.co/kibana/kibana:7.9.2
    ports:
    - published: 5601
      target: 5601
  nginx:
    depends_on:
      file-context-ext:
        condition: service_started
    image: nginx:latest
    ports:
    - published: 4000
      target: 4000
    volumes:
    - D:\Workspace\dotnet-project-boilerplate-practice\src\nginx.conf:/etc/nginx/nginx.conf:ro
  ocelotapigw:
    build:
      context: D:\Workspace\dotnet-project-boilerplate-practice\src
      dockerfile: ApiGateways/OcelotApiGw/Dockerfile
    container_name: ocelotapigw
    depends_on:
      file-processor:
        condition: service_started
    environment:
      ASPNETCORE_ENVIRONMENT: Development
      ElasticConfiguration:Uri: http://elasticsearch:9200
    image: ocelotapigw
    ports:
    - published: 8010
      target: 80
  rabbitmq:
    container_name: rabbitmq
    image: rabbitmq:3-management-alpine
    ports:
    - published: 5672
      target: 5672
    - published: 15672
      target: 15672
    restart: always
version: '3.4'
volumes:
  elasticsearch-data: {}